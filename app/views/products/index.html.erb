<div class="text-center">
  <h3 class="title">Alguns de itens úteis para sua próxima viagem!</h3>
</div>

<div class="border">
  <div class="container text-center">
    <div class="row align-items-center">
      <% @products.each do |product| %>
        <div class="col">
          <div class="card ">
            <%= image_tag product['image'], class:"card-img-small", style:"height: 270px; width:200px;"%>
            <div class="card-body">
              <h4 class= "link"><%= product['title'] %></h4>
              <p class="card-text price"><%= number_to_currency(product['price']) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
