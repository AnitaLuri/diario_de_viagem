<div class="text-center">
  <h3 class="title">Lojinha de itens úteis para sua próxima viagem!</h3>
</div>

<div class="border">
  <div class="container text-center">
    <div class="row align-items-center">
      <% @products.each do |product| %>
        <div class="col">
          <div class="card shadow-sm">
            <%= image_tag product.photo, class:"card-img-small"%>
            <div class="card-body">
              <h4><%= product.name %></h4>
              <p class="card-text"><%= product.price %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
