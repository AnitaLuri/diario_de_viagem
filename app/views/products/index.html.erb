<div class="text-center">
  <h3 class="title">Alguns de itens úteis para sua próxima viagem!</h3>
</div>

<% if @products.empty? %>
  <p>Nenhum produto disponível no momento</p>
<% end %>

<div class="border">
  <div class="container text-center">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-sm-3 row-cols-sm-4 align-items-center">
      <% @products.each do |product| %>
        <div class="col">
          <div class="card shadow-sm">
            <%= image_tag product['image'], class:"card-img-small", style:"height:200px"%>
            <div class="card-body">
              <h4 class="link"><%= product['title'].split.first %></h4>
              <p class="card-text"><%= number_to_currency(product['price']) %></p>
              <small class="text-muted"><%= product['category']%></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>